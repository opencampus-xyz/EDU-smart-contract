{
  "name": "edu-smart-contract",
  "version": "1.0.0",
  "description": "ERC-20 contract for EDU",
  "scripts": {
    "postinstall": "bash -c 'for cfg in .vscode/settings.json .vscode/extensions.json .vscode/launch.json; do cp -n ${cfg}.default ${cfg} || :; done'",
    "clean:vscode": "rm -rf .vscode/extensions.json .vscode/launch.json .vscode/settings.json || :",
    "lint:js": "eslint \"**/*.{js,ts}\"  --no-error-on-unmatched-pattern",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint": "run-s lint:js lint:sol",
    "fix:js": "eslint --fix \"**/*.{js,ts}\"  --no-error-on-unmatched-pattern",
    "fix:sol": "solhint --fix \"contracts/**/*.sol\"",
    "fix": "run-s fix:js fix:sol",
    "format:js": "prettier --write \"**/*.{ts,js}\"",
    "format:sol": "prettier --write \"**/*.sol\"",
    "format": "run-s format:js format:sol",
    "run-all:linting": "run-s format fix",
    "compile": "hardhat compile --show-stack-traces",
    "test": "hardhat test --show-stack-traces",
    "test-p": "hardhat test --parallel --show-stack-traces",
    "coverage": "cross-env COVERAGE=true hardhat coverage --show-stack-traces",
    "docgen:sol": "hardhat docgen --show-stack-traces",
    "docgen": "run-s docgen:sol",
    "clean:compile": "rm -rf cache || :",
    "clean:artifacts:soft": "find artifacts/* | grep -v '^artifacts/build-info\\|^artifacts/contracts' | xargs rm -rf || :",
    "clean:artifacts:hard": "rm -rf artifacts || :",
    "clean:coverage": "rm -rf coverage coverage.json *.coverage || :",
    "clean:docgen": "rm -rf docs || :",
    "clean:contracts": "run-p clean:compile clean:artifacts:soft clean:hardhat clean:coverage clean:docgen",
    "run-all:contracts": "run-s clean:contracts clean:artifacts:hard compile docgen test-p coverage",
    "deploy": "cross-env NODE_OPTIONS=--max-old-space-size=8192 hardhat deploy --show-stack-traces",
    "deploy:test": "cross-env NETWORK_TAGS=test yarn deploy",
    "deploy:goerli": "hardhat deploy --network goerli --show-stack-traces",
    "verify:goerli": "hardhat etherscan-verify --network goerli --show-stack-traces",
    "deploy:mainnet": "hardhat --network mainnet deploy --show-stack-traces",
    "verify:mainnet": "hardhat etherscan-verify --network mainnet --show-stack-traces",
    "deploy:bsc": "hardhat deploy --network bsc --show-stack-traces",
    "verify:bsc": "hardhat etherscan-verify --network bsc --show-stack-traces",
    "deploy:bsctest": "hardhat deploy --network bsctest --show-stack-traces",
    "verify:bsctest": "hardhat etherscan-verify --network bsctest --show-stack-traces",
    "clean:cache": "rm -rf cache || :",
    "clean:deployments": "rm -rf deployments/localhost* deployments/hardhat* || :",
    "clean:generated": "rm -rf generated/localhost* generated/hardhat* || :",
    "clean:hardhat": "rm -rf hardhat.config.last.json || :",
    "clean:etherscan": "rm -rf etherscan_requests || :",
    "clean:migrations": "run-s clean:cache clean:deployments clean:generated clean:hardhat clean:etherscan",
    "run-all:migrations": "run-s clean:migrations deploy deploy:test",
    "run-all": "run-s run-all:linting run-all:contracts run-all:migrations",
    "prepack": "run-s clean:artifacts:hard compile clean:contracts clean:migrations"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencampus-xyz/EDU-smart-contract.git"
  },
  "author": "OpenCampus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opencampus-xyz/EDU-smart-contract/issues"
  },
  "homepage": "https://github.com/opencampus-xyz/EDU-smart-contract#readme",
  "devDependencies": {
    "@animoca/ethereum-contract-helpers": "^0.0.4",
    "@animoca/ethereum-contracts": "^1.1.1",
    "@animoca/ethereum-contracts-1.0": "npm:@animoca/ethereum-contracts@1.0.0",
    "@animoca/ethereum-contracts-bridging-0.3": "npm:@animoca/ethereum-contracts-bridging@0.3.0",
    "@animoca/ethereum-migrations": "^1.0.8",
    "@ethersproject/abi": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "=4.8.2",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.37.0",
    "eslint-config-mocha": "^0.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.0",
    "fs-extra": "^11.1.1",
    "glob": "^9.3.4",
    "hardhat": "^2.13.0",
    "hardhat-deploy": "^0.11.25",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "lodash.mergewith": "^4.6.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.35",
    "yesno": "^0.4.0"
  }
}
